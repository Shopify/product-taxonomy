#!/usr/bin/env bash

root=$(dirname $(dirname $0))

for dir in $root/docs/_data/*/
do
  src="${dir}search_index.json"
  target="$root/_site/releases/$(basename $dir)/search_index.json"
  echo "Copying $src to $target"
  cp $src $target

  src="${dir}attribute_search_index.json"
  target="$root/_site/releases/$(basename $dir)/attribute_search_index.json"
  echo "Copying $src to $target"
  cp $src $target
done

exit 0
